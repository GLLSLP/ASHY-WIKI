{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "lib": ["es5", "dom"],
    "types": ["jest", "node"],
    "typeRoots": ["../../node_modules/@types"],
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
